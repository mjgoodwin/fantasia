.header
  %h1
    #{@model.name}
    - if @operation.policy.call(:edit?)
      = link_to "Edit", edit_league_path(@model)
    - if @operation.policy.call(:join?)
      = link_to "Join", join_league_path(@model)
    -# - if @operation.policy.(:delete?)
    -#   = link_to "Delete", league_path(@model), method: :delete

%table.teams
  - @model.teams.each do |team|
    %tr
      %td
        #{team.owners.map(&:email).join}
        - if team.owners.include? @model.commissioner
          (Commissioner)
      %td
        #{team.name}

- if @team
  = concept "team/cell", @team
